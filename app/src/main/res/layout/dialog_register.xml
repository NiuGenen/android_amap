<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightskyblue">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/white"
            android:background="@color/lightskyblue"
            android:textSize="20sp"
            android:textStyle="normal"
            android:gravity="center"/>

        <FrameLayout
            android:layout_below="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:background="#00000000"
            android:orientation="horizontal"
            android:id="@+id/reg_username_input_frame">
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:background="@drawable/input_bg"
                android:textCursorDrawable="@drawable/input_cursor"
                android:text="username"
                android:inputType="textImeMultiLine"
                android:maxLines="1"
                android:textColor="@color/lightskyblue"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="25sp"
                android:id="@+id/reg_username_input"/>
            <Button
                android:id="@+id/reg_username_input_clean_button"
                android:onClick="onUsernameClean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:layout_gravity="end"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:background="@drawable/circle_gray"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_below="@+id/reg_username_input_frame"
            android:id="@+id/reg_passwd_input_frame">
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="passwd"
                android:textCursorDrawable="@drawable/input_cursor"
                android:background="@drawable/input_bg"
                android:maxLines="1"
                android:inputType="textPassword"
                android:textColor="@color/lightskyblue"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="25dp"
                android:id="@+id/reg_passwd_input"/>
            <Button
                android:id="@+id/reg_passwd_input_clean_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="X"
                android:textSize="13dp"
                android:layout_gravity="end"
                android:textColor="@color/white"
                android:background="@drawable/circle_gray"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/reg_now_button_frame"
            android:layout_below="@+id/reg_passwd_input_frame"
            android:layout_alignParentStart="true"
            android:paddingBottom="10dp">
            <Button
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Reg Now"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:background="@drawable/rectangle_lightskyblue"
                android:id="@+id/reg_now_button"
                />
        </FrameLayout>

    </RelativeLayout>

</LinearLayout>