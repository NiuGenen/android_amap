<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.a60213.getyourlocation.Main2Activity"
    tools:showIn="@layout/activity_main2">

    <TextView
        android:id="@+id/title_2_position_track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/lightblue"
        android:text="Position Track"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button_2_start_gps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="start GPS"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onStartGPSClick"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="50dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/text_2_count_down" />

    <EditText
        android:id="@+id/edittext_2_latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="5343325423423"
        android:textColor="@color/black"
        android:gravity="center"
        android:enabled="false"
        android:layout_above="@+id/text_2_count_down"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/title_2_longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Longitude"
        android:layout_below="@+id/text_2_count_down"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="7654253523"
        android:textColor="@color/black"
        android:gravity="center"
        android:id="@+id/edittext_2_longitude"
        android:enabled="false"
        android:layout_below="@+id/title_2_longitude"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/title_2_latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Latitude"
        android:layout_above="@+id/edittext_2_latitude"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
